---
import Layout from '../layouts/Layout.astro';
import '../styles/pricing.css';

const pricingPlans = [
  {
    name: "Starter",
    price: "Free",
    period: "",
    description: "Perfect for trying basic features",
    features: [
      "1 active chatbot",
      "100 messages/month",
      "10 data entities",
      "1 document source",
      "10 stored responses",
    ],
    cta: "Start Building",
    popular: false,
  },
  {
    name: "Pro",
    price: "$19",
    period: "/mo",
    description: "For growing businesses",
    features: [
      "3 active chatbots",
      "1,000 messages/chatbot",
      "$4.99 per additional 1K messages",
      "50 data entities/chatbot",
      "3 document sources/chatbot",
      "100 stored responses/chatbot",
    ],
    cta: "Upgrade Now",
    popular: true,
  },
  {
    name: "Business",
    price: "$99",
    period: "/mo",
    description: "For professional teams",
    features: [
      "10 active chatbots",
      "10,000 messages/chatbot",
      "$2.99 per additional 1K messages",
      "200 data entities/chatbot",
      "10 document sources/chatbot",
      "1,000 stored responses/chatbot",
    ],
    cta: "Get Started",
    popular: false,
  }
];
---

<Layout title="Hacret - Pricing">
  <main class="pricing-container">
    <h1 class="pricing-title">Hacret Pricing</h1>
    
    <div class="pricing-grid">
      {pricingPlans.map((plan) => (
        <div class={`pricing-card ${plan.popular ? 'popular' : ''}`}>
          <div class="card-header">
            <h3>{plan.name}</h3>
            {plan.popular && <span class="popular-badge">Popular</span>}
          </div>
          
          <div class="card-price">
            <span class="price">{plan.price}</span>
            {plan.period && <span class="period">{plan.period}</span>}
          </div>
          
          <p class="card-description">{plan.description}</p>
          
          <ul class="card-features">
            {plan.features.map((feature) => (
              <li>{feature}</li>
            ))}
          </ul>
          
          <a href="/signup" class={`card-button ${plan.popular ? 'primary' : 'outline'}`}>
            {plan.cta}
          </a>
        </div>
      ))}
    </div>

    <div class="enterprise-cta">
      <h2>Need enterprise-grade solutions?</h2>
      <p>Custom chatbot deployments for large organizations with dedicated support and no limits.</p>
      <a href="/contact" class="enterprise-button">Contact Sales</a>
    </div>
  </main>
</Layout>
