    function removeForm(id) {
      const form = document.querySelector(`.form-definition-entry[data-id="${id}"]`);
      if (form) {
        form.remove();
        
        const forms = document.querySelectorAll('.form-definition-entry');
        forms.forEach((form, index) => {
